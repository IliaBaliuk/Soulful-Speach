<div class="ChatHeader">
    <h5>@ViewBag.CurrentRoom.Name</h5>
    <p>@ViewBag.RoomUsers.Count members</p>
</div>
<div class="MessageMonitor" id=@ViewBag.CurrentRoom.Id>
    @foreach (var message in ViewBag.RoomMessages)
    {
        <div class="Message">
            <div>
                <p class="Sender">@message.User.UserName</p>
                    @message.MessageText
                <b class="Indentation"></b>
                <p class="MessageTime">@message.DateTime.ToString("dddd, dd MMMM yyyy H:mm")</p>
            </div>
        </div>
    }
</div>
<div class="ContextBlock">
    <form class="MassageBoxForm" id="sendMessageForm">
        <textarea id=@ViewBag.CurrentRoom.Id rows="1" placeholder="Write a message..." class="MessageBox" name="UserMessageTB"></textarea>
        <input type="submit" class="MassageSenderButton" value="Send">
    </form>
</div>

<script src="~/js/roomFunctions.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>