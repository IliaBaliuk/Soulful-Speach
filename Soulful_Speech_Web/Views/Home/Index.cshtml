@{
    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/style.css")


<div class="Tab">
    <button class="TabLink" href onclick="openTab(event, 'Rooms')" id="defaultOpen"><h3>Rooms</h3></button>
    <button class="TabLink" onclick="openTab(event, 'Friends')"><h3>Friends</h3></button>
    <button class="TabLink" onclick="openTab(event, 'Requests')"><h3>Requests</h3></button>
    <button class="TabLink" onclick="openTab(event, 'Favorites')"><h3>Favorites</h3></button>
    <button class="TabLink" onclick="openTab(event, 'BlackList')"><h3>BlackList</h3></button>
    <button class="TabLink" onclick="openTab(event, 'AddFriend')"><h3>Add Friend</h3></button>
    <button class="TabLink" onclick="openTab(event, 'SearchRoom')"><h3>Search room</h3></button>
    <button class="TabLink" onclick="openTab(event, 'CreateRoom')"><h3>Create room</h3></button>
</div>

<div id="Rooms" class="TabContent CustomScrollbar">
    @foreach (var userRoom in ViewBag.UserRooms)
    {
        <div class="TabItem centered">
            <div class="TabItemInfo">
                <div>
                    <h4>@userRoom.Name</h4>
                </div>
                <h6>Theme: @userRoom.Theme</h6><br>
            </div>
            <div class="TabItemCustomDropdown">
                <div class="dropdown" style="float:right;">
                    <button class="dropbtn"><i class="fas fa-chevron-down"></i></button>
                    <div class="dropdown-content">
                        <a href="#">Enter room</a>
                        <a href="#">Delete room</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<div id="Friends" class="TabContent CustomScrollbar">
    @foreach (var friend in ViewBag.UserFriends)
    {
        <div class="TabItem centered">
            <h4 class="TabItemInfo">@friend.UserName</h4>
            <div class="TabItemCustomDropdown">
                <div class="dropdown" style="float:right;">
                    <button class="dropbtn"><i class="fas fa-chevron-down"></i></button>
                    <div class="dropdown-content">
                        <a href="#">Accept</a>
                        <a href="#">Decline</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div id="Requests" class="TabContent CustomScrollbar">
    @foreach (var request in ViewBag.UserRequests)
    {
        <div class="TabItem centered">
            <h4 class="TabItemInfo">@request.UserName</h4>
            <div class="TabItemCustomDropdown">
                <div class="dropdown" style="float:right;">
                    <button class="dropbtn"><i class="fas fa-chevron-down"></i></button>
                    <div class="dropdown-content">
                        <a href="#">Accept</a>
                        <a href="#">Decline</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<div id="Favorites" class="TabContent CustomScrollbar">
    @foreach (var favoriteFriend in ViewBag.UserFavoriteFriends)
    {
        <div class="TabItem centered">
            <h4 class="TabItemInfo">@favoriteFriend.UserName</h4>
            <div class="TabItemCustomDropdown">
                <div class="dropdown" style="float:right;">
                    <button class="dropbtn"><i class="fas fa-chevron-down"></i></button>
                    <div class="dropdown-content">
                        <a href="#">Accept</a>
                        <a href="#">Decline</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div id="BlackList" class="TabContent CustomScrollbar">
    @foreach (var blackListFriend in ViewBag.UserBlackLiserFriends)
    {
        <div class="TabItem centered">
            <h4 class="TabItemInfo">@blackListFriend.UserName</h4>
            <div class="TabItemCustomDropdown">
                <div class="dropdown" style="float:right;">
                    <button class="dropbtn"><i class="fas fa-chevron-down"></i></button>
                    <div class="dropdown-content">
                        <a href="#">Accept</a>
                        <a href="#">Decline</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

